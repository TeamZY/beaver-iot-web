{
    "type": "dataCard",
    "name": "Card",
    "class": "data_card",
    "icon": "./icon.png",
    "defaultRow": 3,
    "defaultCol": 2,
    "configProps": [
        {
            "style": "width: 100%",
            "components": [
                {
                    "type": "entitySelect",
                    "title": "Entity",
                    "key": "entity",
                    "style": "width: 100%",
                    "componentProps": {
                        "size": "small",
                        "entityType": "PROPERTY",
                        "entityValueTypes": ["STRING", "LONG", "DOUBLE", "BOOLEAN"],
                        "entityAccessMods": ["R", "RW"]
                    },
                    "rules": {
                        "required": true
                    }
                }
            ]
        },
        {
            "style": "width: 100%",
            "components": [
                {
                    "type": "input",
                    "title": "Title",
                    "key": "title",
                    "style": "width: 100%",
                    "componentProps": {
                        "size": "small",
                        "inputProps": {
                            "maxLength": 15
                        }
                    }
                }
            ]
        }
    ],
    "view": [
        {
            "tag": "div",
            "themes": {
                "default": {
                    "class": "data-view__container"
                }
            },
            "children": [
                {
                    "tag": "span",
                    "themes": {
                        "default": {
                            "class": "data-view__content"
                        }
                    },
                    "params": ["entity"]
                }
            ]
        }
    ]
}
