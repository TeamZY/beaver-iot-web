{
    "type": "switch",
    "name": "Switch",
    "class": "operate",
    "icon": "./icon.png",
    "configProps": [
        {
            "style": "width: 100%",
            "components": [
                {
                    "type": "entitySelect",
                    "title": "Entity",
                    "key": "entity",
                    "style": "width: 100%",
                    "getDataUrl": "",
                    "componentProps": {
                        "size": "small",
                        "entityType": "PROPERTY",
                        "entityValueTypes": ["BOOLEAN"],
                        "accessMods": ["W", "RW"]
                    },
                    "rules": {
                        "required": true
                    }
                }
            ]
        },
        {
            "components": [
                {
                    "type": "input",
                    "title": "Title",
                    "key": "title",
                    "defaultValue": "",
                    "componentProps": {
                        "size": "small",
                        "inputProps": {
                            "maxLength": 15
                        }
                    }
                }
            ]
        },
        {
            "title": "Appearance of off status",
            "style": "display: flex;",
            "components": [
                {
                    "type": "iconSelect",
                    "key": "offIcon",
                    "style": "flex: 1;padding-right: 12px;",
                    "defaultValue": "WifiOffIcon",
                    "componentProps": {
                        "size": "small"
                    }
                },
                {
                    "type": "iconColorSelect",
                    "key": "offIconColor",
                    "style": "flex: 1;",
                    "defaultValue": "#9B9B9B",
                    "componentProps": {
                        "size": "small"
                    }
                }
            ]
        },
        {
            "title": "Appearance of on status",
            "style": "display: flex;margin-top:20px;",
            "components": [
                {
                    "type": "iconSelect",
                    "key": "onIcon",
                    "style": "flex: 1;padding-right: 12px;",
                    "defaultValue": "WifiIcon",
                    "componentProps": {
                        "size": "small"
                    }
                },
                {
                    "type": "iconColorSelect",
                    "key": "onIconColor",
                    "style": "flex: 1;",
                    "defaultValue": "#4A90E2",
                    "componentProps": {
                        "size": "small"
                    }
                }
            ]
        }
    ],
    "view": [],
    "defaultRow": 3,
    "defaultCol": 3
