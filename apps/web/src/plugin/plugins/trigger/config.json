{
    "type": "trigger",
    "name": "事件触发",
    "class": "operate",
    "icon": "./icon.png",
    "minRow": 3,
    "maxRow": 8,
    "minCol": 2,
    "maxCol": 4,
    "configProps": [
        {
            "style": "width: 100%",
            "theme": {
                "default": {
                    "class": "first-component-select",
                    "style": "font-size: 18px;"
                }
            },
            "components": [
                {
                    "type": "entitySelect",
                    "title": "Entity",
                    "key": "entity",
                    "style": "width: 100%",
                    "valueType": "object",
                    "getDataUrl": "",
                    "componentProps": {
                        "size": "small"
                    },
                    "rules": {
                        "required": true
                    }
                }
            ]
        },
        {
            "theme": {
                "default": {
                    "class": "first-component-switch",
                    "style": "font-size: 18px;"
                }
            },
            "components": [
                {
                    "type": "switch",
                    "title": "Display Title",
                    "key": "showTitle",
                    "defaultValue": true
                }
            ]
        },
        {
            "theme": {
                "default": {
                    "class": "first-component-input",
                    "style": "font-size: 18px;"
                }
            },
            "components": [
                {
                    "type": "input",
                    "title": "Title",
                    "key": "title",
                    "defaultValue": "事件组件",
                    "componentProps": {
                        "size": "small"
                    }
                }
            ]
        },
        {
            "theme": {
                "default": {
                    "class": "first-component-switch",
                    "style": "font-size: 18px;"
                }
            },
            "components": [
                {
                    "title": "Display Icon",
                    "type": "switch",
                    "key": "showIcon"
                }
            ]
        },
        {
            "title": "Appearance of status",
            "style": "display: flex;",
            "theme": {
                "default": {
                    "class": "first-component-icon-select"
                }
            },
            "components": [
                {
                    "type": "iconSelect",
                    "key": "icon",
                    "style": "flex: 1;padding-right: 12px;",
                    "componentProps": {
                        "size": "small"
                    }
                },
                {
                    "type": "iconColorSelect",
                    "key": "iconColor",
                    "style": "flex: 1;",
                    "componentProps": {
                        "size": "small"
                    }
                }
            ]
        }
    ],
    "view": [
        {
            "tag": "div",
            "themes": {
                "default": {
                    "class": "trigger-view",
                    "style": "background: #fff"
                }
            },
            "children": [
                {
                    "tag": "icon",
                    "showDepended": {
                        "showIcon": true
                    },
                    "styleDepended": {
                        "color": "iconColor"
                    },
                    "params": [
                        "icon"
                    ]
                },
                {
                    "tag": "div",
                    "showDepended": {
                        "showTitle": true
                    },
                    "params": [
                        "title"
                    ],
                    "themes": {
                        "default": {
                            "class": "trigger-view-title"
                        }
                    }
                }
            ]
        }
    ]
}