{
    "type": "trigger",
    "name": "事件触发",
    "class": "operate",
    "icon": "./icon.png",
    "configProps": [
        {
            "style": "width: 100%",
            "theme": {
                "default": {
                    "class": "first-component-select",
                    "style": "font-size: 18px;"
                }
            },
            "components": [
                {
                    "type": "select",
                    "title": "Entity",
                    "key": "entity",
                    "style": "width: 100%",
                    "getDataUrl": "",
                    "componentProps": {
                        "size": "small"
                    },
                    "options": [
                        {
                            "label": "选项1",
                            "value": "1"
                        },
                        {
                            "label": "选项2",
                            "value": "2"
                        },
                        {
                            "label": "选项3",
                            "options": [
                                {
                                    "label": "3的子选项",
                                    "value": "3"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "theme": {
                "default": {
                    "class": "first-component-switch",
                    "style": "font-size: 18px;"
                }
            },
            "components": [
                {
                    "type": "switch",
                    "title": "Display Title",
                    "key": "showTitle",
                    "defaultValue": true
                }
            ]
        },
        {
            "theme": {
                "default": {
                    "class": "first-component-input",
                    "style": "font-size: 18px;"
                }
            },
            "components": [
                {
                    "type": "input",
                    "title": "Title",
                    "key": "title",
                    "defaultValue": "事件组件",
                    "componentProps": {
                        "size": "small"
                    }
                }
            ]
        },
        {
            "theme": {
                "default": {
                    "class": "first-component-switch",
                    "style": "font-size: 18px;"
                }
            },
            "components": [
                {
                    "title": "Display Icon",
                    "type": "switch",
                    "key": "showIcon"
                }
            ]
        },
        {
            "title": "Appearance of status",
            "style": "display: flex;",
            "theme": {
                "default": {
                    "class": "first-component-icon-select"
                }
            },
            "components": [
                {
                    "type": "iconSelect",
                    "key": "icon",
                    "style": "flex: 1;padding-right: 12px;",
                    "componentProps": {
                        "size": "small"
                    }
                },
                {
                    "type": "iconColorSelect",
                    "key": "iconColor",
                    "style": "flex: 1;",
                    "componentProps": {
                        "size": "small"
                    }
                }
            ]
        }
    ],
    "view": [
        {
            "tag": "div",
            "themes": {
                "default": {
                    "class": "trigger-view",
                    "style": "background: #fff"
                }
            },
            "children": [
                {
                    "tag": "icon",
                    "showDepended": {
                        "showIcon": true
                    },
                    "params": [
                        "icon"
                    ],
                    "dependStyle": {
                        "color": "iconColor"
                    }
                },
                {
                    "tag": "div",
                    "showDepended": {
                        "showTitle": true
                    },
                    "params": [
                        "title"
                    ],
                    "themes": {
                        "default": {
                            "class": "trigger-view-title"
                        }
                    }
                }
            ]
        }
    ]
}