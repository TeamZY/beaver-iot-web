{
    "type": "trigger",
    "name": "事件触发",
    "class": "operate",
    "icon": "./icon.png",
    "defaultRow": 3,
    "defaultCol": 2,
    "configProps": [
        {
            "style": "width: 100%",
            "components": [
                {
                    "type": "entitySelect",
                    "title": "Entity",
                    "key": "entity",
                    "style": "width: 100%",
                    "valueType": "object",
                    "getDataUrl": "",
                    "componentProps": {
                        "size": "small",
                        "accessMods": ["W", "RW"]
                    },
                    "rules": {
                        "required": true
                    }
                }
            ]
        },
        {
            "components": [
                {
                    "type": "input",
                    "title": "Title",
                    "key": "title",
                    "defaultValue": "Title",
                    "componentProps": {
                        "size": "small"
                    },
                    "rules": {
                        "required": true
                    }
                }
            ]
        },
        {
            "title": "Appearance of status",
            "style": "display: flex;",
            "components": [
                {
                    "type": "iconSelect",
                    "key": "icon",
                    "style": "flex: 1;padding-right: 12px;",
                    "componentProps": {
                        "size": "small"
                    },
                    "rules": {
                        "required": true
                    }
                },
                {
                    "type": "iconColorSelect",
                    "key": "iconColor",
                    "style": "flex: 1;",
                    "componentProps": {
                        "size": "small"
                    }
                }
            ]
        }
    ],
    "view": [
        {
            "tag": "div",
            "themes": {
                "default": {
                    "class": "trigger-view",
                    "style": "background: #fff"
                }
            },
            "children": [
                {
                    "tag": "icon",
                    "styleDepended": {
                        "color": "iconColor"
                    },
                    "params": [
                        "icon"
                    ]
                },
                {
                    "tag": "Tooltip",
                    "params": [
                        "title"
                    ],
                    "themes": {
                        "default": {
                            "class": "trigger-view-title",
                            "style": "white-space: nowrap;overflow: hidden;text-overflow: ellipsis"
                        }
                    },
                    "props": {
                        "autoEllipsis": true
                    }
                }
            ]
        }
    ]
}