{
    "name": "ms-assistant-fe",
    "version": "0.0.1",
    "license": "MIT",
    "description": "Milesight IoT Assistant",
    "scripts": {
        "dev": "pnpm --filter=@app/* -r run dev",
        "dev:pkgs": "pnpm --filter=@iot/* -r run watch",
        "start": "pnpm run dev & pnpm run dev:pkgs",
        "build:web": "pnpm --filter=@app/web -r run build",
        "build:pkgs": "pnpm --filter=@iot/* -r run build",
        "i18n:import": "pnpm --filter=@iot/locales run import",
        "i18n:export": "pnpm --filter=@iot/locales run export",
        "i18n:export-all": "pnpm --filter=@iot/locales run exportall",
        "clean": "rimraf -g node_modules */**/node_modules",
        "clean:cache": "rimraf -g */**/node_modules/.vite */**/node_modules/.cache",
        "test": "echo \"Error: no test specified\" && exit 1",
        "prepare": "husky install",
        "preinstall": "node --import tsx ./scripts/only-allow.ts pnpm",
        "postinstall": "pnpm --filter=@milesight/* -r run build"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.8",
        "@milesight/spec": "workspace:*",
        "@types/node": "^20.4.8",
        "chalk": "^5.3.0",
        "dotenv": "^16.4.5",
        "fast-glob": "^3.3.2",
        "husky": "^9.1.5",
        "lint-staged": "^15.2.0",
        "rimraf": "^6.0.1",
        "tsx": "^4.19.0",
        "typescript": "^5.6.2"
    }
}
